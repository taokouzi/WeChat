/* pages/user/index.wxss */
.u-container{width: 100vw;height: 100vh;background:#eeeeee;padding: 2vh 0;box-sizing: border-box;}
.user-top,.users{
  width: 95vw;
  height: 38vw;
  background: rgba(255,255,255,1);
  padding:0 3vw;
  margin:2vh auto;
  border-radius: 2vh;
  box-sizing: border-box;
}
.user-top{margin-top: 0;}
.user-top>.left{
  /* width: 100%; */
  height: 100%;
}
.head{
  width: 20vw;height: 20vw;
  border-radius: 50%;
  padding:1vw;
  background: rgba(30,159,255,.1);
  display: inline-block;
  text-align: left;
  vertical-align: middle;
  margin-top:9vw;
  /* margin: 0 auto; */
}
.head image{width: 100%;height: 100%;border-radius: 50%;}
.nick{line-height:12vw;font-size: 26rpx;color:#333333;width:100%;}
.identity{font-size: 24rpx;}
.info{display: inline-block;padding-left:3vw;box-sizing: border-box;
  width: 35vw;
  position: relative;
  top:10vw;
}
.user-right{width: 30vw;text-align: right;font-size:24rpx;
margin-top: 8vw;
}
.house{
  line-height:10vw;height: 10vw;
  opacity: 0;
}
.lv{
  font-size:20rpx;
  background: rgba(30,159,255,.5);padding:0 2vw;box-sizing: border-box;border-radius:5vw;height:5vw;line-height:5vw;
  width: auto;
  display: inline-block;
  color: #ffffff;
}
.play{
  background: rgba(30,159,255,.8);padding:0 2vw;
  border-radius:6vw;
  display: inline-block;
  color: #ffffff;
  height:6vw;line-height:6vw
}
.play.ov{background: rgba(30,159,255,.4);}
.users{height: auto;
  box-sizing: border-box;
  text-align: center;
  padding: 0;
}
.user{
  text-align: center;color:#333333;font-size:24rpx;
  height:16vw;
  line-height: 16vw;
  padding: 0 3vw;
  border-bottom: 1px solid #eeeeee;
}
.user image{width: 6vw;height:6vw;margin:0 auto;vertical-align:middle;}
.user-title{padding-left: 2vw;}
.user image.jiant{margin-top:6vw;
width:4vw;height:4vw;margin-left:1vw;
}


.opacity{
  position: fixed;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  z-index: 9;
  background: rgba(0,0,0,.7);
}
.layer{
  position: fixed;
  width: 56vw;
  height: 36vw;
  background: #ffffff;
  text-align: center;
  margin:-18vw 0 0 -28vw;
  left: 50%;
  top: 50%;
  z-index: 10;
  border-radius:1vh;
  font-size: 30rpx;
}
.layer view{
  padding:5vw 0;
}
.layer button{
  width: 80%;
  background: #1E9FFF;
  color: #ffffff;
  height:10vw;
  border-radius: 10vw;
  margin-top:5vw;
  font-size: 30rpx;
}