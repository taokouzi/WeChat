/* pages/login/index.wxss */
.l_form{
  display: block;
	width:94%;
	margin: 0 auto;
}
.l_form .label{
	display:block;
	width:100%;
	height:40px;
	margin:20px 0;
}
.l_form .label .tel{
	width:90%;
	padding:0 5%;
	height:100%;
	background:#efefef;
	border-radius:5px;
	outline:none;
	font-size: 14px;
}

.l_form .label .yzm{
	width:45%;
	padding:0 5%;
	height:100%;
	background:#efefef;
	border-radius:5px;
	outline:none;
	font-size: 14px;
}
.l_form .label .right,.login,.save{
	width:40%;
	height:100%;
	background:#efefef;
	border:none;
	border-radius:5px;
	outline:none;
	background:#D2AF6B;
	color:#ffffff;
	font-size:14px;
}
.login{
	margin-top:7vh;
	width:100%;
	height:40px;
	letter-spacing: 2px;
}
button.button{
  line-height: 40px;text-align: center;
}