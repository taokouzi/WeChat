.top_list{height:120rpx;width:100%;border-top:1px solid #efefef;margin: 5px 0 10px 0;}
.top_list>view{text-align:center;width:50%;padding-top:5px;} 
.top_list>view text{font-size:20px;font-weight:bold;}
.top_list>view view{font-size:14px;line-height:26px;}

.list{height:auto;width:90%;margin:20rpx auto;}
.list navigator{height:44px;line-height:44px;font-size:14px;border-bottom:1px solid #efefef;}
.jiant{margin-top:15px;width:14px;height:14px;margin-left:20rpx;color:#aaaaaa;}


.list_li text.left{font-size:14px;}

.list_notice .bai{width:18px;height:18px;margin-top:13px;border-radius: 50%;background:#F22C21;text-align:center;line-height:18px;font-size:14px;}
.list_data .red{font-size:12px;}
.sh_type{width:auto;font-size:12px;position: absolute;top:0;right:5%;}



.btn{
  font-size: 12px !important;
  padding-left:20px;
  padding-right: 0;
  box-sizing:border-box;
  text-align:right;
  text-decoration:none;
  height:44px;
  line-height:44px;
  border-radius:5px;
  -webkit-tap-highlight-color:transparent;
  overflow:hidden;
  background-color:transparent;
}
.btn::after{
  border:1px solid rgba(0, 0, 0, 0);
}


@media screen and (min-width:320px) and (max-width: 374px){
  .top_right view{line-height:40px;}
}

button.hui::after{
  border:1px solid transparent;
}
button.hui{
  border-radius:5px;
  font-size:12px;padding:0;height:24px;line-height:24px;margin-top:10px;border:1px solid transparent;
  background-color:transparent;

}










